shuru
lekha name;
poro (name);

purno sonkha n;
poro (n);

jodi (n <= 0) {
  dekhao "No items\n";
} nahoy jodi (n == 1) {
  dekhao "One item for {name}\n";
} nahoy {
  dekhao "{name} has {n} items\n";
}

for (purno sonkha i = n; i > 0; i--) {
  dekhao "{i} ";
}
dekhao \n;

purno sonkha a = 10;
purno sonkha b = 3;
purno sonkha c;
c = a + b * 2 - 5 / 5;
c += 1;
c -= 2;

jodi (!(a % b == 1) || (a >= b && a > 0)) {
  dekhao "ok {c}\n";
} nahoy {
  dekhao "bad\n";
}

ferot dao 0;
shesh
